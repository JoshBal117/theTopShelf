    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongo": "^0.1.0",
    "react-bootstrap": "^1.3.0",
    "node-sass": "^4.14.1",
    "mongoose": "^5.10.4"
